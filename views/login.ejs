      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    /> -->
    <link rel="stylesheet" href="/output.css" />
  </head>

  <body class="w-screen h-screen">
    <%- include('./partials/beforeLoginHeader.ejs') %>
    <div class="bg-gray-100 h-full pt-8">
      <div class="w-4/12 mx-auto px-4 py-5 shadow-xl rounded-lg bg-white">
        <%-include('./partials/messages.ejs') %>
        <h2 class="text-center text-2xl">Sign In</h2>
        <form
          class="flex flex-col"
          id="register-form"
          action="/users/exist"
          method="post"
        >
          <input
            type="email"
            class="p-2 my-1 border rounded-md"
            placeholder="Email Id"
            name="email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            required
          />
          <input
            type="password"
            class="p-2 my-1 border rounded-md"
            placeholder="Password"
            name="password"
            id="signup_pass"
            value="<%= typeof password != 'undefined' ? password : '' %>"
            required
          />
          <button type="submit" class="text-xl" id="submit-btn">Submit</button>
        </form>
        <a href="/users/" type="button" class="btn">Sign Up here</a>
      </div>
    </div>
  </body>
</html>
